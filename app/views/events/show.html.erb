<% title( @event.nick_name ) %>

<dl class="dl-horizontal">
	<dt><strong>Time:</strong></dt>
	<dd><%= display_date_range @event %></dd>
	<dt><strong>Team:</strong></dt>
	<dd><%= @event.team_name %></dd>
	<dt><strong>Boat:</strong></dt>
	<dd><%= @event.boat_name %></dd>
</dl>



<div class="form-actions">
	<%= link_to t('.back', :default => t("helpers.links.back")), events_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(@event), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
								@event,
								:method => 'delete',
								:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
								:class => 'btn btn-danger' %>
</div>
