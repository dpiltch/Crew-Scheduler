<% title(t '.title', :default => "Events") %>

<table class="table table-striped">
	<thead>
		<tr>
					<th>Starts at</th>
					<th>Ends at</th>
					<th>Team</th>
					<th>Boat</th>
					<th class="no_sort"><%=t '.actions', :default => t("helpers.actions") %></th>
		</tr>
	</thead>
	<tbody>
	<% @events.each do |event| %>
		<tr>
			<td><%= event.starts_at %></td>
			<td><%= event.ends_at %></td>
			<td><%= event.team_id %></td>
			<td><%= event.boat_id %></td>
			<td>
				<%= link_to t('.show', :default => t("helpers.links.show")), event, :class => 'btn btn-mini btn-info' %>
				<%= link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(event), :class => 'btn btn-mini' %>
				<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
											event,
											:method => :delete,
											:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
											:class => 'btn btn-mini btn-danger' %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_event_path, :class => 'btn btn-primary' %>