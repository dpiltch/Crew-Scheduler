<%= simple_form_for(@team, :html => { :class => 'form-horizontal' }) do |f| %>
	<%= f.error_notification %>

	<div class="form-inputs">
		<%= f.input :name %>
		<span class="make-toggle"><%= f.input :require_cox, :label => "Requires a coxswain" %></span>
		<span class="make-toggle"><%= f.input :require_coach, :label => "Requires a coach" %></span>
	</div>

	<div class="form-actions">
		<%= f.button :submit, :class => 'btn-primary' %>
		<%= link_to t('.cancel', :default => t("helpers.links.cancel")), teams_path, :class => 'btn' %>
	</div>
<% end %>
