<div class="row">
	<div class="span8 offset2 login-box">
		<div class="row">
			<div class="span8">
			<h2>Sign up</h2>
			</div>
		</div>
		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
			<div class="row">
				<div class="span6 offset1">
				<%= f.error_notification %>
				</div>
			</div>
			<div class="row">
				<div class="span3">
					<%= f.input :first_name, :autofocus => true, :input_html => { :class => "span3"} %> 
					<%= f.input :last_name, :input_html => { :class => "span3"} %>
					<%= f.input :email, :required => true, :input_html => { :class => "span3"} %>
					<%= f.input :password, :required => true, :input_html => { :class => "span3"} %>
					<%= f.input :password_confirmation, :required => true, :input_html => { :class => "span3"} %>
					<%= f.input :time_zone, :input_html => { :class => "span3"} %>
				</div>
				<div class="span3 offset1">
					<span class="side-select"><%= f.input :side, :as => "radio", :collection => [["Port","port"], ["Starboard","stbd"], ["Both","ambi"]], :item_wrapper_class => 'inline', :label_method => Proc.new{ |item| image_tag "#{item.last}.png", :title => item.first }, :value_method => Proc.new{ |item| item.last } %></span>
					<span class="make-toggle"><%= f.input :will_cox, :label => "Willing to coxswain" %></span>
					<span class="make-toggle"><%= f.input :will_coach, :label => "Willing to coach" %></span>
					<span class="make-toggle"><%= f.input :send_reminders, :label => "Email reminders about rowing times" %></span>
					<%= f.input :color, :label => "Color to use for charts", :input_html => { :class => "colorpicker span1", :type => "color"} %>
				</div>
			</div>

					<%= f.button :submit, 'Sign up', :class => 'btn btn-primary btn-large pull-right' %>
					<div class="clearfix"></div>

		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>