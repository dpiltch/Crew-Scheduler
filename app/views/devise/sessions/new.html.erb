<div class="row">
	<div class="span4 offset4 login-box">
		<h2>Sign in</h2>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
		  <%= f.input :email, :autofocus => true, :input_html => { :class => "span4"} %>
		  <%= f.input :password, :input_html => { :class => "span4"} %>
		  <span class="make-toggle"><%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %></span>
		  <%= f.button :submit, "Sign in", :class => 'btn btn-primary btn-large pull-right' %>
		<% end %>
		<div class="clearfix"></div>
		<%= render "devise/shared/links" %>
	</div>
</div>
