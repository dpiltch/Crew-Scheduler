<% title(t '.title', :default => "Weights") %>

<table class="table table-striped">
	<thead>
		<tr>
					<th>Name</th>
					<th class="no_sort"><%=t '.actions', :default => t("helpers.actions") %></th>
		</tr>
	</thead>
	<tbody>
	<% @weights.each do |weight| %>
		<tr>
			<td><%= weight.name %></td>
			<td>
				<%= link_to t('.show', :default => t("helpers.links.show")), weight, :class => 'btn btn-mini btn-info' %>
				<%= link_to t('.edit', :default => t("helpers.links.edit")), edit_weight_path(weight), :class => 'btn btn-mini' %>
				<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
											weight,
											:method => :delete,
											:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
											:class => 'btn btn-mini btn-danger' %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_weight_path, :class => 'btn btn-primary' %>