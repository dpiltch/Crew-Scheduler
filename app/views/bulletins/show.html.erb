<% title(t '.title', :default => "Bulletin" ) %>

<h2><%= @bulletin.title %></h2>
<blockquote>
	<%= BlueCloth.new(@bulletin.content).to_html.html_safe %>
</blockquote>
<br />
<p class="lead"><strong>Display until:</strong><%= @bulletin.display_until.blank? ? "<em>Unknown</em>".html_safe : l(@bulletin.display_until, :format => :statistic) %></p>
<br /><br />
<dl class="dl-horizontal">
	<dt><strong>Creator:</strong></dt>
	<dd><%= @bulletin.creator ? @bulletin.creator.full_name : "<em>Unknown</em>".html_safe %></dd>
	<dt><strong>Created at:</strong></dt>
	<dd><%= @bulletin.created_at.blank? ? "<em>Unknown</em>".html_safe : l(@bulletin.created_at, :format => :long_pretty) %></dd>
	<dt><strong>Updated at:</strong></dt>
	<dd><%= @bulletin.updated_at.blank? ? "<em>Unknown</em>".html_safe : l(@bulletin.updated_at, :format => :long_pretty) %></dd>
</dl>

<div class="form-actions">
	<%= link_to t('.back', :default => t("helpers.links.back")), bulletins_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_bulletin_path(@bulletin), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
								@bulletin,
								:method => 'delete',
								:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
								:class => 'btn btn-danger' %>
</div>
